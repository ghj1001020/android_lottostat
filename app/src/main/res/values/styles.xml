<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 디바이더 -->
    <style name="BaseDivider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginStart">@dimen/base_margin</item>
        <item name="android:layout_marginEnd">@dimen/base_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="NoMarginDivider" parent="BaseDivider">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="Dot">
        <item name="android:background">@drawable/dot</item>
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <!-- 프로그레스바 -->
    <!-- indeterminate : 무한반복 애니메이션 -->
    <style name="Progress_Intro" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/prg_intro</item>
        <item name="android:indeterminateDuration">750</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
    </style>


    <!-- 바텀시트 다이얼로그 -->
    <style name="BaseBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BaseBottomSheetStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BaseBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowAnimationStyle">@style/AnimBottomSheetDialog</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- 바텀시트 다이얼로그 애니메이션 -->
    <style name="AnimBottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/anim_up</item>
        <item name="android:windowExitAnimation">@anim/anim_down</item>
    </style>

    <!-- 리스트 -->
    <style name="ListWinLotto">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">16dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/list_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/list_track</item>
    </style>

</resources>