            app:layout_constraintRight_toLeftOf="@id/num2" />

        <com.ghj.lottostat.ui.LTNumTextview
            android:id="@+id/num2"
            style="@style/TextLottoNumMid"
            app:layout_constraintTop_toTopOf="parent"
